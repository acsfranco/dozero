# Compilado
CC = gcc

# Executavel
TARGET = perceptron

# Arquivo fontes
SRCS = perceptron.c utils.c netmath.c neuralnet.c neuron.c

# Arquivos OBSs
OBJS = $(SRCS: .c=.o)

# Regra padr√£o
all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(OBJS) -lm -o $(TARGET)

%.o: %.c
	$(CC) -c $< -o $@

clean:
	rm *.o $(TARGET)
